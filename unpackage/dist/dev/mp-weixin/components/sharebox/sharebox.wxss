.comment {
  background: #fff;
  border-bottom: 1px solid #f2eeee;
  padding: 15px 10px;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.comment .left .headbox {
  width: 45px !important;
  height: 45px !important;
  border-radius: 5px;
  margin-top: 4px;
}
.comment .left .headbox image {
  width: 100%;
  height: 100%;
}
.comment .right {
  font-size: 16px;
  display: table-cell;
  padding-left: 10px;
  width: 100%;
}
.comment .right .uname {
  font-size: 16px;
  font-weight: 600;
  color: #36648b;
}
.comment .right .talk {
  font-size: 14px;
  line-height: 1.8;
}
.comment .right .sharbox {
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
}
.comment .right .sharbox view {
  width: 30%;
  height: 90px;
  margin: 2px;
  background: #757575;
  overflow: hidden;
}
.comment .right .sharbox view image {
  width: 100%;
  height: 100%;
}
.comment .right .toolbar {
  padding: 7px 0;
  position: relative;
  top: 5px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.comment .right .toolbar .time text {
  color: #757575;
  font-size: 11px;
}
.comment .right .toolbar .icon {
  position: absolute;
  right: 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-justify-content: space-around;
          justify-content: space-around;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.comment .right .toolbar .icon view {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.comment .right .toolbar .icon .two {
  margin-left: 10px;
  margin-right: 10px;
}

