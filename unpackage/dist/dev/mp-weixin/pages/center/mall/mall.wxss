.content {
  padding-top: 5px;
}
.content .goodlist {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
  flex-wrap: wrap;
  padding: 0 15px;
  background: #fff;
}
.content .goodlist .item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
  flex-direction: column;
  width: 48%;
  padding-bottom: 20px;
  margin-right: 4%;
}
.content .goodlist .item .imgbox {
  width: 100%;
  height: 165px;
  border-radius: 3px;
  overflow: hidden;
}
.content .goodlist .item .imgbox image {
  width: 100%;
  height: 100%;
  opacity: 1;
}
.content .goodlist .item .title {
  font-size: 14px;
  color: #303133;
  line-height: 30px;
}
.content .goodlist .item .goodsale {
  position: relative;
  font-size: 16px;
}
.content .goodlist .item .goodsale .dh {
  font-size: 14px;
  color: #fa436a;
  line-height: 1;
}
.content .goodlist .item .goodsale .del {
  position: absolute;
  bottom: 0;
  right: 0;
  color: #909399;
  font-size: 12px;
}
.content .goodlist .item .goodbuy {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
  justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  padding-top: 5px;
}
.content .goodlist .item .goodbuy .dh_yj {
  font-size: 12px;
  color: #909399;
  text-align: center;
}
.content .goodlist .item .goodbuy button {
  background: #fa436a;
  color: #fff;
  height: 30px;
  line-height: 30px;
  width: 80px;
  margin-left: 0;
  margin-right: 0;
  padding-left: 10px;
  padding-right: 10px;
  font-size: 14px;
}

